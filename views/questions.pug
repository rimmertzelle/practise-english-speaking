extends layout

block header    
    nav(class=['breadcrumb'], aria-label='breadcrumbs')
        ul
            li
                a(href='../') Home
            li
                a(href='./') Category
            li(class='is-active')
                a(href='#' aria-current='page') Questions

block content
    div.container
        div(class=['columns', 'is-centered'])
            div(class=['row', 'has-text-centered', 'is-half'])
                .images
                    each dataItem in images
                        .image
                            img(class='image-small' src=`${dataItem.url}`)
                            div(class='top-left') 
                                p(class='number') #{dataItem.id}
        div(class=['columns', 'is-centered'])
            div(class=['column','is-centered', 'is-half'])
                p Remaining time: 
                    span(id='timer') 00:00
        div(id='start' class=['columns', 'is-centered'])
            div(class=['column', 'is-half'])
                each questionItem in questions
                    div(class=['card', 'question'])
                        div(class=['card-content', 'card-question'])
                            div(class="card-content")
                                h5(class=['title', 'is-5']) Question: #{questionItem.questionNumber} (#{questionItem.duration} seconds)
                                p #{questionItem.description}
                        div(class="card-content-button")
                            p(data-time=questionItem.duration) Start

